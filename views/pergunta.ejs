<%- include('partials/header') %>
<body>
    <%- include('partials/nav') %>

    <div class="container bg-light mt-5 mb-3 ">
        <div class="card mb-2">
            <div class="card-header ">
                <h2>Responder</h2>
            </div>
                <div class="card-body">
                    <form method="post" action="/salvaresposta">
                        <input type="hidden" name="id_pergunta" value="<%= pergunta.id_pergunta %>">
                        <h3><strong><%= pergunta.titulo %></strong></h3>
                        
                        <label for="tituloPergunta"><strong>Descrição:</strong></label>
                        <span><%= pergunta.descricao %></span>
                        
                        <div class="row mt-3">
                            <div class="col">
                                <label for="Resposta">Resposta:</label>
                                <textarea class="form-control" name="resposta" id="resposta" cols="30" rows="10" placeholder="Responder..."></textarea>
                            </div>
                        </div>
                        
                        <button class="btn btn-primary mt-3">Salvar</button>
                    </form>
                </div>

                <% respostas.forEach( resposta => {%>
                    <div class="card mt-3 ml-3 mr-3">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-9">
                                    <span>Resposta:</span>
                                </div>
                                <div class="col-3">
                                    <span>
                                        <%= new Date(resposta.createdAt).toLocaleString('pt-BR') %>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <p>
                                <%= resposta.resposta %>
                            </p>
                        </div>
                    </div>

                <% })%>
            </div>

</body>
<%- include('partials/footer') %>